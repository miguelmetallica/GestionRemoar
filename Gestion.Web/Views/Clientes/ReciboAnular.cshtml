@model Gestion.Web.Models.Comprobantes

@{
    ViewData["Title"] = "Detalle del Cliente";
    //var SaldoDTO = (IEnumerable<Comprobantes>)ViewData["Saldo"];
    //var formasPagos = (IEnumerable<FormasPagos>)ViewData["FormasPagos"];
    //var formasPagosTMP = (IEnumerable<ComprobantesFormasPagosDTO>)ViewData["FormasPagosTMP"];

}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sistema de gestíon
            <small>Gestion de Clientes</small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Inicio</a></li>
            <li><a asp-controller="Clientes" asp-action="Index">Listado de Clientes</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <partial name="_ClienteDetalle" model='ViewData["Cliente"]' />
            </div>
            <div class="col-md-9">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Anulacion de Recibo</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-action="ReciboAnular" enctype="multipart/form-data">
                        <div class="box-body">
                            <div class="box-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <input type="hidden" asp-for="ClienteId" />
                                <input type="hidden" asp-for="ComprobanteId" />
                                <input type="hidden" asp-for="Id" />

                                <div class="form-group">
                                    <label class="control-label">Nro de Recibo</label>
                                    <input value="@Model.Codigo" readonly class="form-control input-sm" />

                                </div>
                                <div class="form-group">
                                    <label class="control-label">Fecha del Recibo</label>
                                    <input value="@Model.FechaComprobante" readonly class="form-control input-sm" />

                                </div>

                                <div class="form-group">
                                    <label class="control-label">Total</label>
                                    <input value="@Model.Total" readonly class="form-control input-sm" />

                                </div>

                                <div class="form-group">
                                    <label class="control-label">Motivo de Anulacion</label>
                                    <input value="@Model.Observaciones" class="form-control input-sm" />

                                </div>
                            </div>
                            <div class="box-footer">
                                <input type="submit" value="Anular Recibo" class="btn btn-danger"  />
                                <a asp-action="Details" asp-route-id="@Model.ClienteId" class="btn btn-default pull-right">Volver</a>                                
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}    
}
