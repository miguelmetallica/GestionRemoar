@model Gestion.Web.Models.ComprobantesReciboDTO

@{
    ViewData["Title"] = "Detalle del Cliente";
    var SaldoDTO = (IEnumerable<Comprobantes>)ViewData["Saldo"];
    var formasPagos = (IEnumerable<FormasPagos>)ViewData["FormasPagos"];
    
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sistema de gestíon
            <small>Gestion de Clientes</small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Inicio</a></li>
            <li><a asp-controller="Clientes" asp-action="Index">Listado de Clientes</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <partial name="_ClienteDetalle" model='ViewData["Cliente"]' />
            </div>
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Generar Recibo</h3>

                        <a asp-action="Recibo" asp-route-id="@Model.ClienteId" class="btn btn-warning btn-sm" aria-hidden="true">Otros</a>
                        <a asp-action="Recibo" asp-route-id="@Model.ClienteId" class="btn btn-default btn-sm" aria-hidden="true">Cheque</a>
                        <a asp-action="Recibo" asp-route-id="@Model.ClienteId" class="btn btn-info btn-sm" aria-hidden="true">Tarjeta de Credito</a>
                        <a asp-action="Recibo" asp-route-id="@Model.ClienteId" class="btn btn-success btn-sm" aria-hidden="true">Tarjeta de Debito</a>
                        <a asp-action="Efectivo" asp-route-id="@Model.ClienteId" class="btn btn-primary btn-sm" aria-hidden="true">Efectivo</a>

                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-action="Recibo" enctype="multipart/form-data">
                        <div class="box-body">
                            <div class="box-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <input type="hidden" asp-for="ClienteId" />

                                <div class="form-group">
                                    <label class="control-label">Saldo</label>
                                    <input value="@SaldoDTO.Sum(x => x.Saldo)" readonly class="form-control input-sm" />

                                </div>

                                <div class="form-group">
                                    <label asp-for="Importe" class="control-label"></label>
                                    <input asp-for="Importe" class="form-control input-sm" />
                                    <span asp-validation-for="Importe" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="box-footer">
                                <input type="submit" value="Generar Recibo" class="btn btn-primary" />
                                <a asp-action="Details" asp-route-id="@Model.ClienteId" class="btn btn-default pull-right">Volver</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-3">
                <!-- /.box -->
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            Formas de Pagos
                        </h3>
                    </div>
                    <div class="box-body">
                        @foreach (var item in formasPagos)
                        {
                            switch (item.Tipo)
                            {
                                case "E":
                                    <a class="btn btn-block btn-social btn-bitbucket" asp-action="Recibo" asp-route-id="@Model.ClienteId">
                                        <i class="fa fa-bitbucket"></i> @item.Descripcion
                                    </a>
                                    break;
                                case "C":
                                    <a class="btn btn-block btn-social btn-bitbucket" asp-action="Recibo" asp-route-id="@Model.ClienteId">
                                        <i class="fa fa-bitbucket"></i> @item.Descripcion
                                    </a>
                                    break;
                                case "D":
                                    <a class="btn btn-block btn-social btn-bitbucket" asp-action="Recibo" asp-route-id="@Model.ClienteId">
                                        <i class="fa fa-bitbucket"></i> @item.Descripcion
                                    </a>
                                    break;
                                case "X":
                                    <a class="btn btn-block btn-social btn-bitbucket" asp-action="Recibo" asp-route-id="@Model.ClienteId">
                                        <i class="fa fa-bitbucket"></i> @item.Descripcion
                                    </a>
                                    break;
                                case "O":
                                    <a class="btn btn-block btn-social btn-bitbucket" asp-action="Recibo" asp-route-id="@Model.ClienteId">
                                        <i class="fa fa-bitbucket"></i> @item.Descripcion
                                    </a>
                                    break;
                                default:
                                    break;
                            }                            
                        }
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}    
}
