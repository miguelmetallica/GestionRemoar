@model Gestion.Web.Models.Comprobantes

@{
    Layout = null;
    var Detalle = (IEnumerable<ComprobantesFormasPagosDTO>)ViewData["Detalle"];
    
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Remoar | Gestión</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/admin/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/admin/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin/dist/css/AdminLTE.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body onload="window.print();">
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row page-header">
                <div class="col-xs-4">
                    <h2>
                        <img src="~/images/logo.jpg" class="img-fluid" alt="Responsive image" width="100" height="112">                       
                    </h2>
                </div>
                <div class="col-xs-4">
                    <h4>@Model.TipoComprobante - @Model.Codigo</h4>
                </div>
                <div class="col-xs-4">                    
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    <address>
                        <strong>REMOAR -Tu Espacio Interior</strong><br>
                        Av. Manuel Belgrano 1953<br>
                        San Miguel de Tucumán - 4000<br>
                        0381 602-2704<br>                        
                    </address>                    
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <address>
                        <strong>@Model.RazonSocial</strong><br>
                        @Model.Calle @Model.CalleNro<br>
                        @Model.Provincia @Model.Localidad<br>
                        @Model.Celular<br>
                        @Model.Email
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>@Model.TipoComprobante: @Model.Codigo</b><br>                    
                    <b>Fecha:</b> @Model.FechaComprobante.ToShortDateString()<br>
                    <b>Usuario:</b> @Model.UsuarioAlta<br>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12">
                    <h5>Formas de Pagos</h5>
                    @foreach (var formas in Detalle)
                    {

                        switch (formas.FormaPagoTipo)
                        {
                            case "E":
                                <div class="col-xs-12">
                                    <b>@formas.FormaPago</b>
                                    <b> - TOTAL:</b> @formas.Total
                                    
                                </div>
                                break;
                            case "C":
                                <div class="col-xs-12">
                                        <b>@formas.FormaPago</b>
                                        <b> - TOTAL:</b> @formas.Total
                                        <b> - IMPORTE:</b> @formas.Importe - <b>CUOTA:</b> @formas.Cuota - <b>INTERES:</b> @formas.Interes                                   
                                </div>
                                break;
                            case "D":
                                <div class="col-xs-12">
                                        <b>@formas.FormaPago</b>
                                        <b> - TOTAL:</b> @formas.Total                                    
                                </div>
                                break;
                            case "X":
                                <div class="col-xs-12">
                                        <b>@formas.FormaPago</b>
                                        <b> - NUMERO:</b> @formas.ChequeNumero 
                                        <b> - TOTAL:</b> @formas.Total                                     
                                    
                                </div>
                                break;
                            case "O":
                                <div class="col-xs-12">
                                        <b>@formas.FormaPago</b>
                                        <b> - FORMA PAGO:</b> @formas.Otros
                                        <b> - TOTAL:</b> @formas.Total

                                    
                                </div>
                                break;
                            default:
                                break;
                        }

                    }

                </div>
                    <!-- /.col -->
                </div>
            <!-- /.row -->

            <div class="row">
                <!-- accepted payments column -->
                <div class="col-xs-6">                    
                </div>
                <!-- /.col -->
                <div class="col-xs-6">
                    <p class="lead">Total</p>

                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th style="width:50%">Subtotal</th>
                                <td>@Model.Total</td>
                            </tr>
                            <tr>
                                <th>Impuestos</th>
                                <td>@(Model.Total - Model.TotalSinImpuesto)</td>
                            </tr>
                            <tr>
                                <th>Total</th>
                                <td>@Model.Total</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
</body>
</html>
