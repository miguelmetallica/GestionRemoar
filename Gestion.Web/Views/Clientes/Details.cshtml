@model Gestion.Web.Models.Clientes

@{
    ViewData["Title"] = "Detalle del Cliente";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sistema de gestíon
            <small>Gestion de Clientes</small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Inicio</a></li>
            <li><a asp-controller="Clientes" asp-action="Index">Listado de Clientes</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <h3 class="profile-username text-center">@Model.RazonSocial</h3>

                        <p class="text-muted text-center">@Model.Codigo</p>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Nro Documento</b> <a class="pull-right">@Model.NroDocumento</a>
                            </li>
                            <li class="list-group-item">
                                <b>CUIT/CUIL</b> <a class="pull-right">@Model.CuilCuit</a>
                            </li>
                            <li class="list-group-item">
                                <b>Fecha Nacimiento</b> <a class="pull-right">@Model.FechaNacimiento</a>
                            </li>
                        </ul>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Editar datos del Cliente</a>
                        <a asp-action="Index" class="btn btn-default pull-right btn-sm">Volver</a>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->                
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Datos Adicionales</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <strong><i class="fa fa-phone margin-r-5"></i> Celular</strong>

                        <p class="text-muted">
                            @Model.Celular
                        </p>

                        @if (Model.Telefono != "")
                        {
                            <strong><i class="fa fa-phone margin-r-5"></i> Telefono</strong>

                            <p class="text-muted">
                                @Model.Telefono
                            </p>
                        }

                        <hr>

                        <strong><i class="fa fa-mail-bulk margin-r-5"></i> Email</strong>

                        <p class="text-muted">@Model.Email</p>

                        <hr>

                        <strong><i class="fa fa-map-marker margin-r-5"></i> Domicilio</strong>

                        <p class="text-muted">@Model.ProvinciaId </p>
                        <p class="text-muted">@Model.Localidad </p>
                        <p class="text-muted">@Model.CodigoPostal </p>
                        <p class="text-muted">@Model.Calle @Model.CalleNro</p>
                        <p class="text-muted">@Model.PisoDpto </p>
                        <p class="text-muted">@Model.OtrasReferencias </p>

                        
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <div class="col-md-9">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Listado de Comprobantes</h3>
                        <a asp-action="ProductoCreate" asp-route-id="@Model.Id" class="btn btn-primary btn-sm pull-right" aria-hidden="true">Agregar Productos</a>
                    </div>
                    <div class="box-body">
                        <table id="dTable" class="table dt-responsive table-condensed table-bordered table-striped" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        Codigo
                                    </th>
                                    <th>
                                        Producto
                                    </th>
                                    <th>
                                        Precio
                                    </th>
                                    <th>
                                        Sin Impuesto
                                    </th>
                                    <th>
                                        Cantidad
                                    </th>
                                    <th>
                                        SubTotal
                                    </th>
                                    <th>
                                        SubTotal Sin Imp
                                    </th>
                                    <th>Operaciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                            <tfoot>                                
                            </tfoot>
                        </table>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
