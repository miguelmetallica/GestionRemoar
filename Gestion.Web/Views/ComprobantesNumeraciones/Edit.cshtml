@model Gestion.Web.Models.ComprobantesNumeraciones

@{
    ViewData["Title"] = "Editar Numeracion";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sistema de gestíon
            <small>Gestion de Clientes</small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Inicio</a></li>
            <li><a asp-controller="ComprobantesNumeraciones" asp-action="Index">Listado de Numeraciones</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Ficha del Numeracion</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div class="box-body">
                            <div class="form-group">
                                <label asp-for="SucursalId" class="control-label"></label>
                                <select asp-for="SucursalId" asp-items="@ViewBag.Sucursales" class="form-control input-sm"></select>
                                <span asp-validation-for="SucursalId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TipoComprobanteId" class="control-label"></label>
                                <select asp-for="TipoComprobanteId" asp-items="@ViewBag.TiposComprobantes" class="form-control input-sm"></select>
                                <span asp-validation-for="TipoComprobanteId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Letra" class="control-label"></label>
                                <input asp-for="Letra" class="form-control input-sm" />
                                <span asp-validation-for="Letra" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PuntoVenta" class="control-label"></label>
                                <input asp-for="PuntoVenta" class="form-control input-sm" />
                                <span asp-validation-for="PuntoVenta" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Numero" class="control-label"></label>
                                <input asp-for="Numero" class="form-control input-sm" />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-default pull-right">Volver al Listado</a>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <!--/.col-->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
