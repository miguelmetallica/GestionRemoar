@model Gestion.Web.Models.VentasRapidasDTO

@{
    Layout = null;
    var Detalle = (IEnumerable<VentasRapidasDetalleDTO>)ViewData["Detalle"];
    var formasPagosTMP = (IEnumerable<VentasRapidasFormasPagosDTO>)ViewData["FormasPagosTMP"];

}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Remoar | Gestión</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/admin/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/admin/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin/dist/css/AdminLTE.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body onload="window.print();">
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row page-header">
                <div class="col-xs-4">
                    <h2>
                        <img src="~/images/logo.jpg" class="img-fluid" alt="Responsive image" width="100" height="112">
                    </h2>
                </div>
                <div class="col-xs-4">
                    <h4>Presupuesto Rapido - @Model.Codigo</h4>
                </div>
                <div class="col-xs-4">
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    <address>
                        <strong>REMOAR -Tu Espacio Interior</strong><br>
                        Av. Manuel Belgrano 1953<br>
                        San Miguel de Tucumán - 4000<br>
                        0381 602-2704<br>
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <address>
                        <strong>@Model.ClienteRazonSocial</strong><br>
                        @Model.ClienteNroDocumento<br>
                        @Model.ClienteCuitCuil<br>
                        @Model.TipoResponsable

                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>@Model.TipoComprobante: @Model.Codigo</b><br>
                    <b>Fecha:</b> @Model.Fecha.ToShortDateString()<br>
                    <b>Usuario:</b> @Model.UsuarioAlta<br>
                </div>
                <!-- /.col -->
            </div>
            <div class="row invoice-info">
                <div class="col-sm-12">

                    
                </div>
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Cantidad</th>
                                <th>Codigo</th>
                                <th>Producto</th>
                                <th>Precio</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Detalle)
                            {
                                <tr>
                                    <td>@item.Cantidad</td>
                                    <td>@item.ProductoCodigo</td>
                                    <td>@item.ProductoNombre</td>
                                    <td>@item.Precio</td>
                                    <td>@(item.Precio * item.Cantidad)</td>
                                    
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>            
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                @if (formasPagosTMP.Count() != 0)
                {
                    <div class="col-xs-12">
                        <p class="lead">Detalle de Formas de Pagos</p>

                        <div class="table-responsive">
                            <table class="table">
                                @foreach (var formas in formasPagosTMP)
                                {

                                    switch (formas.FormaPagoTipo)
                                    {
                                        case "E":
                                            <tr>
                                                <th style="width:30">@formas.FormaPago</th>
                                                <td>TOTAL: @formas.Total</td>
                                                <td>DESCUENTO: @formas.Descuento</td>
                                            </tr>
                                            break;
                                        case "C":
                                            <tr>
                                                <th style="width:30%">@formas.FormaPago</th>
                                                <td>TOTAL: @formas.Total</td>
                                                <td>
                                                    IMPORTE: @formas.Importe
                                                    CUOTA: @formas.Cuota
                                                    INTERES: @formas.Interes
                                                </td>
                                            </tr>

                                            break;
                                        case "D":
                                            <tr>
                                                <th style="width:30%">@formas.FormaPago</th>
                                                <td>TOTAL: @formas.Total</td>
                                                <td></td>
                                            </tr>
                                            break;
                                        case "X":
                                            <tr>
                                                <th style="width:30%">@formas.FormaPago</th>
                                                <td>TOTAL: @formas.Total</td>
                                                <td>NRO de CHEQUE: @formas.ChequeNumero</td>
                                            </tr>

                                            break;
                                        case "O":
                                            <tr>
                                                <th style="width:30%">@formas.FormaPago</th>
                                                <td>TOTAL: @formas.Total</td>
                                                <td>FORMA DE PAGO: @formas.Otros</td>
                                            </tr>
                                            break;
                                        case "U":
                                            <tr>
                                                <th style="width:30%">@formas.FormaPago</th>
                                                <td>TOTAL: @formas.Total</td>
                                                <td>COTIZACION: @formas.DolarCotizacion </td>
                                            </tr>
                                            break;
                                        default:
                                            break;
                                    }

                                }
                            <tr style="font-size:large; background-color:aliceblue;">
                                <th style="width:50%">TOTAL A PAGAR $ </th>
                                <td> @formasPagosTMP.Sum(x => x.Total)</td>
                                <td></td>
                            </tr>
                            </table>
                        </div>
                    </div>
                }
                <!-- /.col -->
            </div>
            <!-- /.row -->

            
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
</body>
</html>
