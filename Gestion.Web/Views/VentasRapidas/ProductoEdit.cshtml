@model Gestion.Web.Models.VentasRapidasDetalleDTO

@{
    ViewData["Title"] = "Editar de Productos";
    
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sistema de gestíon
            <small>Ventas Rapidas</small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-controller="Home"><i class="fas fa-tachometer-alt"></i> Inicio</a></li>
            <li><a asp-controller="VentasRapidas">Listado de Ventas</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Editar del Producto</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-action="ProductoEdit" enctype="multipart/form-data">
                        <div class="box-body">
                            <input type="hidden" asp-for="VentaRapidaId" />
                            <input type="hidden" asp-for="ProductoId" />
                            <input type="hidden" asp-for="ProductoCodigo" />

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Codigo</label>
                                <input asp-for="ProductoCodigo" disabled class="form-control input-sm" />
                                <span asp-validation-for="ProductoCodigo" class="text-danger"></span>
                            </div>


                            @if (Model.ProductoCodigo == "999999999999")
                            {
                                <div class="form-group">
                                    <label class="control-label">Producto</label>
                                    <input asp-for="ProductoNombre" class="form-control input-sm" />
                                    <span asp-validation-for="ProductoNombre" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Precio</label>
                                    <input asp-for="Precio" class="form-control input-sm" />
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>
                            }
                            else
                            {
                                <div class="form-group">
                                    <label class="control-label">Producto</label>
                                    <input asp-for="ProductoNombre" value="@Model.ProductoNombre" disabled class="form-control input-sm" />
                                    <span asp-validation-for="ProductoNombre" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Precio</label>
                                    <input asp-for="Precio" value="@Model.Precio" disabled class="form-control input-sm" />
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>
                            }

                            <div class="form-group">
                                <label asp-for="Cantidad" class="control-label"></label>
                                <input asp-for="Cantidad" class="form-control input-sm" />
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
                            <a asp-controller="VentasRapidas" asp-action="VentaRapida" asp-route-id="@Model.VentaRapidaId" class="btn btn-default btn-sm pull-right">Volver</a>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <!--/.col-->
            
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    
}
