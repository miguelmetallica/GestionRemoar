@model Gestion.Web.Models.PresupuestosDetalleDTO

@{
    ViewData["Title"] = "Presupuesto Rechazado";

    var Detalle = (IEnumerable<PresupuestosDetalleDTO>)ViewData["Detalle"];
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sistema de gestíon
            <small>Gestion de Presupuestos</small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-controller="Home"><i class="fas fa-tachometer-alt"></i> Inicio</a></li>
            <li><a asp-controller="Presupuestos" asp-action="Rechazados">Listado de Presupuestos Rechazados</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Datos del Presupuesto</h3>    
                                               
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form>
                        <div class="box-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="ClienteId" />

                            <div class="form-group col-md-6">
                                <label asp-for="Codigo" class="control-label"></label>
                                <input asp-for="Codigo" readonly class="form-control input-sm" />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="Estado" class="control-label"></label>
                                <input asp-for="Estado" readonly class="form-control input-sm" />
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="Fecha" class="control-label"></label>
                                <input asp-for="Fecha" type="date" readonly class="form-control input-sm" />
                                <span asp-validation-for="Fecha" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="FechaVencimiento" class="control-label"></label>
                                <input asp-for="FechaVencimiento" type="date" readonly class="form-control input-sm" />
                                <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="ClienteCodigo" class="control-label"></label>
                                <input asp-for="ClienteCodigo" readonly class="form-control input-sm" />
                                <span asp-validation-for="ClienteCodigo" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="ClienteRazonSocial" class="control-label"></label>
                                <input asp-for="ClienteRazonSocial" readonly class="form-control input-sm" />
                                <span asp-validation-for="ClienteRazonSocial" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="ClienteNroDocumento" class="control-label"></label>
                                <input asp-for="ClienteNroDocumento" readonly class="form-control input-sm" />
                                <span asp-validation-for="ClienteNroDocumento" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="ClienteCuilCuit" class="control-label"></label>
                                <input asp-for="ClienteCuilCuit" readonly class="form-control input-sm" />
                                <span asp-validation-for="ClienteCuilCuit" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="UsuarioAlta" class="control-label"></label>
                                <input asp-for="UsuarioAlta" readonly class="form-control input-sm" />
                                <span asp-validation-for="UsuarioAlta" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <a asp-action="Rechazados" class="btn btn-default pull-right">Volver</a>
                        </div>
                    </form>
                </div>                
                <!-- /.box -->
            </div>
            <!--/.col-->
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Listado de Productos</h3>
                                         </div>
                    <div class="box-body">
                        <table id="dTable" class="table dt-responsive table-condensed table-bordered table-striped" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        Codigo
                                    </th>
                                    <th>
                                        Producto
                                    </th>
                                    <th>
                                        Precio
                                    </th>
                                    <th>
                                        Cantidad
                                    </th>
                                    <th>
                                        SubTotal
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Detalle.Count() > 0 && Detalle.FirstOrDefault().ProductoCodigo != "")
                                {
                                    @foreach (var item in Detalle)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProductoCodigo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProductoNombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProductoPrecio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProductoCantidad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubTotal)
                                        </td>

                                    </tr>
                                    }
                                }

                            </tbody>
                            <tfoot>                                
                                <tr>
                                    <th>
                                        
                                    </th>
                                    <th>
                                        
                                    </th>
                                    <th>
                                        
                                    </th>
                                    <th>
                                        Cantidad : @Model.Cantidad
                                    </th>
                                    <th>
                                        Total : @Model.Total
                                    </th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <!-- /.box -->
            </div>
            <!--/.col-->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {

            $('#dTable').DataTable({
                "processing": "true",
                "retrieve": "true",
                "language": {
                    "processing": "Procesando... Espere por favor",
                    "lengthMenu": "Mostrar _MENU_ registros por pagina",
                    "zeroRecords": "Nada encontrado",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "No hay registros disponibles",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sSearch": "Buscar:",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    }
                }
            });
        });

    </script>   

}
