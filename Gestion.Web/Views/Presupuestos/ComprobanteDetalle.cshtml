@model Gestion.Web.Models.ClientesDTO

@{
    ViewData["Title"] = "Detalle del Cliente";
    var prespuesto = (Comprobantes)ViewData["Comprobantes"];
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sistema de gestíon
            <small>Gestion de Clientes</small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Inicio</a></li>
            <li><a asp-controller="Clientes" asp-action="Index">Listado de Clientes</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <partial name="_ClienteDetalle" model='@Model' />
            </div>
            <div class="col-md-9">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Detalle del @prespuesto.TipoComprobante @prespuesto.Codigo</h3>

                        <a asp-action="Aprobados" class="btn btn-default btn-sm pull-right" aria-hidden="true">Volver</a>

                        <a asp-controller="Clientes" asp-action="Recibo" asp-route-id="@prespuesto.Id" class="btn btn-primary btn-sm pull-right" aria-hidden="true" style="margin-right: 5px;">Generar Recibo</a>
                    </div>

                    <partial name="_CuentaCorrienteHistoria" model='@prespuesto' />
                    <!-- /.box -->
                    <div class="box-footer">
                        <a asp-action="Aprobados" class="btn btn-default btn-sm pull-right" aria-hidden="true">Volver</a>

                        <a asp-controller="Clientes" asp-action="Recibo" asp-route-id="@prespuesto.Id" class="btn btn-primary btn-sm pull-right" aria-hidden="true" style="margin-right: 5px;">Generar Recibo</a>
                    </div>
                
                </div>
            </div>
        </div>
    <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    
}
