@model Gestion.Web.Models.PresupuestosResumen

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Resumen</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <div class="box-body">

        <div class="form-group col-md-6">
            <label asp-for="@Model.CantidadProductos" class="control-label"></label>
            <input asp-for="@Model.CantidadProductos" readonly class="form-control input-sm" />
        </div>

        <div class="form-group col-md-6">
            <label asp-for="@Model.SubTotalProductos" class="control-label"></label>
            <input asp-for="@Model.SubTotalProductos" readonly class="form-control input-sm" />
        </div>

        <div class="form-group col-md-6">
            <label asp-for="@Model.DescuentoPorcentaje" class="control-label">Descuento %</label>
            <div class="input-group input-group-sm">
                <input asp-for="@Model.DescuentoPorcentaje" readonly type="text" class="form-control input-sm">
                <span class="input-group-btn">
                    <a asp-action="Descuento" asp-route-id="@Model.Id" class="btn btn-primary btn-flat" aria-hidden="true">Descuento</a>
                    <a class="btn btn-danger btn-sm" asp-action="DescuentoBorrar" asp-route-id="@Model.Id"><i class="fa fa-trash"></i></a>
                </span>
            </div>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="@Model.DescuentoMonto" class="control-label"></label>
            <input asp-for="@Model.DescuentoMonto" readonly class="form-control input-sm" />
        </div>

        <div class="form-group col-md-6">
            <label asp-for="@Model.TotalAPagar" class="control-label"></label>
            <input asp-for="@Model.TotalAPagar" readonly class="form-control input-sm" />
        </div>

        <div class="form-group col-md-6">
            <label asp-for="@Model.SaldoAPagar" class="control-label"></label>
            <input asp-for="@Model.SaldoAPagar" readonly class="form-control input-sm" />
        </div>
    </div>
    <!-- /.box-body -->

</div>