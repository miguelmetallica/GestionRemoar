@model Gestion.Web.Models.PresupuestosDetalle

@{
    ViewData["Title"] = "Eliminar el Producto";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sistema de gestíon
            <small>Gestion de Presupuestos</small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Inicio</a></li>
            <li><a asp-controller="Presupuestos" asp-action="Pendientes">Listado de Presupuestos Pendientes</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Datos del Producto</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->                    
                    <div class="box-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Producto.Codigo)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Producto.Codigo)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Producto.Producto)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Producto.Producto)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Precio)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Precio)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Cantidad)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Cantidad)
                            </dd>
                        </dl>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <form asp-action="ProductoDelete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                            <a asp-controller="Presupuestos" asp-action="Pendiente" asp-route-id="@Model.PresupuestoId" class="btn btn-default pull-right">Volver</a>
                        </form>                        
                    </div>                
                </div>
                <!-- /.box -->
            </div>
            <!--/.col-->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

