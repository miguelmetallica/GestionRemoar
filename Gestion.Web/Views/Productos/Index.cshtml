@model IEnumerable<Gestion.Web.Models.Productos>

@{
    ViewData["Title"] = "Productos";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Create New</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Productos</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="ProductsTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoProductoId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Codigo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Producto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DescripcionCorta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PrecioNormal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PrecioRebajado)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoProductoId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codigo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Producto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DescripcionCorta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PrecioNormal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PrecioRebajado)
                                </td>
                                <td >
                                    <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.Id"><i class="fa fa-pencil"></i></a>
                                    <a asp-action="Details" class="btn btn-default" asp-route-id="@item.Id"><i class="fa fa-list"></i></a>
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
    	$(document).ready(function () {
        	$('#ProductsTable').DataTable();
    	});
    </script>
}
