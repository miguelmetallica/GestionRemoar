@model Gestion.Web.Models.ClientesFisicoAdd

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Ficha del Cliente</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form asp-action="ClienteCreate" enctype="multipart/form-data">
                    <div class="box-body">
                        <input type="hidden" asp-for="ExternalId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control input-sm" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control input-sm" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TipoDocumentoId" class="control-label"></label>
                            <select asp-for="TipoDocumentoId" asp-items="@ViewBag.TiposDocumentos" class="form-control input-sm"></select>
                            <span asp-validation-for="TipoDocumentoId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NroDocumento" class="control-label"></label>
                            <input asp-for="NroDocumento" class="form-control input-sm" />
                            <span asp-validation-for="NroDocumento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CuilCuit" class="control-label"></label>
                            <input asp-for="CuilCuit" class="form-control input-sm" />
                            <span asp-validation-for="CuilCuit" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FechaNacimiento" class="control-label"></label>
                            <input asp-for="FechaNacimiento" class="form-control input-sm" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ProvinciaId" class="control-label"></label>
                            <select asp-for="ProvinciaId" asp-items="@ViewBag.Provincias" class="form-control"></select>
                            <span asp-validation-for="ProvinciaId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Localidad" class="control-label"></label>
                            <input asp-for="Localidad" class="form-control input-sm" />
                            <span asp-validation-for="Localidad" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CodigoPostal" class="control-label"></label>
                            <input asp-for="CodigoPostal" class="form-control input-sm" />
                            <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Calle" class="control-label"></label>
                            <input asp-for="Calle" class="form-control input-sm" />
                            <span asp-validation-for="Calle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CalleNro" class="control-label"></label>
                            <input asp-for="CalleNro" class="form-control input-sm" />
                            <span asp-validation-for="CalleNro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PisoDpto" class="control-label"></label>
                            <input asp-for="PisoDpto" class="form-control input-sm" />
                            <span asp-validation-for="PisoDpto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OtrasReferencias" class="control-label"></label>
                            <input asp-for="OtrasReferencias" class="form-control input-sm" />
                            <span asp-validation-for="OtrasReferencias" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefono" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                <input asp-for="Telefono" class="form-control input-sm" />
                            </div>
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Celular" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-mobile"></i></span>
                                <input asp-for="Celular" class="form-control input-sm" />
                            </div>
                            <span asp-validation-for="Celular" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control input-sm" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-default pull-right">Volver al Listado</a>
                    </div>
                </form>
            </div>
            <!-- /.box -->
        </div>
        <!--/.col-->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->