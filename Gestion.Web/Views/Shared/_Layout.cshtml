<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Remoar | Gestión</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!--=====================================
        ARCHIVOS CSS
    ======================================-->
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/admin/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/bower_components/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/admin/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin/dist/css/AdminLTE.css">
    <!-- AdminLTE Skins.  -->
    <link rel="stylesheet" href="~/admin/dist/css/skins/_all-skins.min.css">
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <!-- DataTables -->
    <link href="~/admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/admin/bower_components/datatables.net-bs/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <!--=====================================
        ARCHIVOS JS
    ======================================-->
    <!-- jQuery 3 -->
    <script src="~/admin/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Admin JS -->
    <script src="~/admin/dist/js/adminlte.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/admin/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/admin/bower_components/fastclick/lib/fastclick.js"></script>
    <!-- DataTables -->
    <script src="~/admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/admin/bower_components/datatables.net-bs/js/dataTables.bootstrap.js"></script>
    <script src="~/admin/bower_components/datatables.net-bs/js/dataTables.responsive.min.js"></script>
    <script src="~/admin/bower_components/datatables.net-bs/js/responsive.bootstrap.min.js"></script>
</head>
<body class="hold-transition skin-blue sidebar-mini sidebar-collapse">

    <div class="wrapper">
        <header class="main-header">
            <a asp-controller="Home" asp-action="Index" class="logo">
                <span class="logo-mini"><b>R</b></span>
                <span class="logo-lg"><b>REMOAR</b></span>
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <i class="fas fa-bars"></i>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="dropdown user user-menu">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-success btn-flat">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    @*<img src="~/admin/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">*@
                                    <img src="~/images/usuario.png" class="user-image" alt="User Image">
                                    <span class="hidden-xs">@(User.Identity.Name)</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="user-header">
                                        <img src="~/admin/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                        <p>
                                            @(User.Identity.Name)
                                            @*<small>Member since Nov. 2012</small>*@
                                        </p>
                                    </li>
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a asp-controller="Account" asp-action="ChangeUser" class="btn btn-info btn-flat">Perfil</a>
                                        </div>
                                        <div class="pull-right">
                                            <a asp-controller="Account" asp-action="Logout" class="btn btn-warning btn-flat">Salir</a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        }


                    </ul>
                </div>
            </nav>
        </header>
        @if (User.Identity.IsAuthenticated)
        {
            <aside class="main-sidebar">
                <section class="sidebar">
                    <div class="user-panel">
                        <div class="pull-left image">
                            <img src="~/images/usuario.png" class="img-circle" alt="User Image">
                        </div>
                        <div class="pull-left info">
                            <p>@User.Identity.Name</p>
                            <a href="#">Administrador</a>
                        </div>
                    </div>
                    <partial name="_Menu" />
                </section>
            </aside>
        }
        @RenderBody()

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year <a href="https://adminlte.io">Sis-Gestion</a>.</strong> Todos los derechos reservados
        </footer>
        </div>

    <script src="~/js/plantilla.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
