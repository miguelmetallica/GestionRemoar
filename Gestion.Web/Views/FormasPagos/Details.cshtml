@model Gestion.Web.Models.FormasPagos

@{
    ViewData["Title"] = "Detalle de la Forma de Pago";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sistema de gestíon
            <small>Formas de Pagos</small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Inicio</a></li>
            <li><a asp-controller="FormasPagos" asp-action="Index">Listado de Formas de Pagos</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Datos de la Forma de Pago</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="box-body">
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Codigo)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Codigo)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Descripcion)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Tipo)
                                </dt>
                                @{
                                    switch (Model.Tipo.ToUpper())
                                    {
                                        case "E":
                                            <dd>EFECTIVO</dd>
                                            break;
                                        case "D":
                                            <dd>TARJETA DE DEBITO</dd>
                                            break;
                                        case "C":
                                            <dd>TARJETA DE CREDITO</dd>
                                            break;
                                        case "X":
                                            <dd>CHEQUES</dd>

                                            break;
                                        case "O":
                                            <dd>OTROS</dd>

                                            break;
                                        case "U":
                                            <dd>DOLARES</dd>
                                            break;
                                        default:
                                            break;
                                    }

                                }                                
                                <dt>
                                    @Html.DisplayNameFor(model => model.FechaDesde)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.FechaDesde)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.FechaHasta)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.FechaHasta)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Estado)
                                </dt>
                                <dd>
                                    @{
                                        if (Model.Estado)
                                        {
                                            <span class="label label-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">Inactivo</span>
                                        }

                                    }
                                </dd>
                            </dl>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar datos de la Entidad</a>
                            <a asp-action="Index" class="btn btn-default pull-right">Volver al Listado</a>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <!--/.col-->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
